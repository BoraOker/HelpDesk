@model ProductCategoryViewModel
@{
    Layout = "_DashboardLayout";
}

<div class="recent-orders">
    <form asp-controller="ProductCategory" asp-action="Edit" method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="ProductCategoryId">
        <h2>Update Category</h2>
        <input type="text" asp-for="CategoryContext" placeholder="Category Context" required>
        <select asp-for="ProductId" asp-items="ViewBag.Products" required>
            <option value="">Select Product</option>
        </select>
        <button type="submit">Save</button>
    </form>
</div>