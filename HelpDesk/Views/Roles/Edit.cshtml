@model AppRole
@{
Layout = "_DashboardLayout";
}

<div class="recent-orders">
    <form asp-controller="Roles" asp-action="Edit" method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" name="id" value="@Model.Id">
        <h2>Update Role</h2>
        <input asp-for="Name" placeholder="Name" required>
        <button type="submit">Save</button>
    </form>
</div>

<div class="recent-orders">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(ViewBag.Users != null) {
                @foreach(var user in ViewBag.Users) {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning"><button class="styled-link yellow-button">Edit</button></a>                  
                        </td>
                    </tr>
                }
            }     
        </tbody>
    </table>
</div>
